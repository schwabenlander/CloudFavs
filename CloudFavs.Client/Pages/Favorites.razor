@page "/favorites"
@inject HttpClient Http

<h1>Favorites</h1>

@if (favorites == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>URI</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var favorite in favorites)
            {
                <FavoriteRow @key="favorite" Favorite="favorite" OnFavoriteDeleted="OnFavoriteDeleted"></FavoriteRow>
            }
        </tbody>
    </table>
}

@code {
    private List<FavoriteDTO> favorites = new List<FavoriteDTO>();

    protected override async Task OnInitializedAsync()
    {
        await GetFavorites();
    }

    protected async Task GetFavorites()
    {
        Console.WriteLine("[Getting Favorites]");
        favorites = await Http.GetFromJsonAsync<List<FavoriteDTO>>("https://localhost:44373/api/favorite/all/66a5db8a-47f7-48a5-98f8-80b34452bf34");
    }

    protected async Task OnFavoriteDeleted(Guid favoriteId)
    {
        await GetFavorites();
    }

    protected void OnNewFavoriteAdded()
    {

    }
}
